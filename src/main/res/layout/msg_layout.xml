<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">

        <TextView
                android:text="TextView"
                android:layout_width="150dp"
                android:layout_height="35dp" app:layout_row="1" app:layout_column="0"
                android:id="@+id/msg_from"/>
        <TextView
                android:text="TextView"
                android:layout_width="150dp"
                android:layout_height="35dp" app:layout_row="1" app:layout_column="1"
                android:id="@+id/msg_topic"/>
        <TextView
                android:text="TextView"
                android:layout_width="150dp"
                android:layout_height="35dp" app:layout_row="1" app:layout_column="2"
                android:id="@+id/msg_date"/>
        <TextView
                android:text="From:"
                android:layout_width="150dp"
                android:layout_height="35dp" app:layout_row="0" app:layout_column="0"
                android:id="@+id/textView15"/>
        <TextView
                android:text="Topic:"
                android:layout_width="150dp"
                android:layout_height="35dp" app:layout_row="0" app:layout_column="1"
                android:id="@+id/textView16"/>
        <TextView
                android:text="Date:"
                android:layout_width="150dp"
                android:layout_height="35dp" app:layout_row="0" app:layout_column="2"
                android:id="@+id/textView17"/>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>