<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp" android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            android:paddingBottom="20dp">

        <TextView
                android:text="Przedmiot"
                android:layout_width="100dp"
                android:layout_height="35dp" app:layout_row="0" app:layout_column="0"
                android:fontFamily="sans-serif-black" android:paddingLeft="10dp"/>
        <TextView
                android:text="Średnia"
                android:layout_width="100dp"
                android:layout_height="35dp" app:layout_row="0" app:layout_column="1"
                android:fontFamily="sans-serif-black"/>
        <TextView
                android:text="Proponowana"
                android:layout_width="100dp"
                android:layout_height="35dp" app:layout_row="0" app:layout_column="2"
                android:fontFamily="sans-serif-black"/>
        <TextView
                android:text="Końcowa"
                android:layout_width="100dp"
                android:layout_height="35dp" app:layout_row="0" app:layout_column="3"
                android:fontFamily="sans-serif-black"/>
        <TextView
                android:text="TextView"
                android:layout_width="100dp"
                android:layout_height="35dp" app:layout_row="1" app:layout_column="0"
                android:id="@+id/subject_subject" android:paddingLeft="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="100dp"
                android:layout_height="35dp" app:layout_row="1" app:layout_column="1"
                android:id="@+id/subject_avg"/>
        <TextView
                android:text="TextView"
                android:layout_width="100dp"
                android:layout_height="35dp" app:layout_row="1" app:layout_column="2"
                android:id="@+id/subject_proposed"/>
        <TextView
                android:text="TextView"
                android:layout_width="100dp"
                android:layout_height="35dp" app:layout_row="1" app:layout_column="3"
                android:id="@+id/subject_fin"/>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>